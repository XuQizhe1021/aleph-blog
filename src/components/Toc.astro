---
type Heading = { depth: number; slug: string; text: string };
type Props = { headings: Heading[]; variant?: 'sidebar' | 'drawer' | 'floating' };

const { headings, variant = 'sidebar' } = Astro.props;
const visible = headings.filter((h) => h.depth >= 2 && h.depth <= 4);
---

{variant === 'drawer' ? (
	<section class="toc-drawer panel" aria-label="目录" data-open="0">
		<button class="toc-drawer-head" type="button" aria-expanded="false">
			<span class="toc-title">目录</span>
			<span class="chev" aria-hidden="true">⌄</span>
		</button>
		<div class="toc-body-wrap">
			<nav class="toc-body">
				{visible.length ? (
					<ul>
						{visible.map((h) => (
							<li class={`d${h.depth}`}>
								<a href={`#${h.slug}`}>{h.text}</a>
							</li>
						))}
					</ul>
				) : (
					<div class="muted empty">无标题</div>
				)}
			</nav>
		</div>
		<script is:inline>
			(() => {
				const root = document.currentScript?.parentElement;
				if (!root) return;
				const btn = root.querySelector('.toc-drawer-head');
				const wrap = root.querySelector('.toc-body-wrap');
				if (!(btn instanceof HTMLButtonElement) || !(wrap instanceof HTMLElement)) return;

				const computeOpenHeight = () => {
					const cap = Math.floor(window.innerHeight * 0.55);
					return Math.min(wrap.scrollHeight, cap);
				};

				const setOpen = (open) => {
					root.dataset.open = open ? '1' : '0';
					btn.setAttribute('aria-expanded', open ? 'true' : 'false');
					if (open) {
						wrap.style.maxHeight = `${computeOpenHeight()}px`;
					} else {
						wrap.style.maxHeight = '0px';
					}
				};

				setOpen(false);
				btn.addEventListener('click', () => setOpen(root.dataset.open !== '1'));
				window.addEventListener('resize', () => {
					if (root.dataset.open === '1') wrap.style.maxHeight = `${computeOpenHeight()}px`;
				});
				root.querySelectorAll('a').forEach((a) => a.addEventListener('click', () => setOpen(false)));
			})();
		</script>
	</section>
) : variant === 'floating' ? (
	<section class="toc-float" aria-label="目录" data-open="0">
		<button class="toc-float-btn" type="button" aria-expanded="false">
			<span class="toc-float-btn-text">目录</span>
		</button>
		<div class="toc-float-panel panel" aria-hidden="true">
			<div class="toc-float-head">
				<div class="toc-title">目录</div>
				<button class="btn toc-float-close" type="button">关闭</button>
			</div>
			<nav class="toc-body">
				{visible.length ? (
					<ul>
						{visible.map((h) => (
							<li class={`d${h.depth}`}>
								<a href={`#${h.slug}`}>{h.text}</a>
							</li>
						))}
					</ul>
				) : (
					<div class="muted empty">无标题</div>
				)}
			</nav>
		</div>
		<script is:inline>
			(() => {
				const root = document.currentScript?.parentElement;
				if (!root) return;
				const openBtn = root.querySelector('.toc-float-btn');
				const closeBtn = root.querySelector('.toc-float-close');
				const panel = root.querySelector('.toc-float-panel');
				if (!(openBtn instanceof HTMLButtonElement) || !(panel instanceof HTMLElement)) return;

				const setOpen = (open) => {
					root.dataset.open = open ? '1' : '0';
					openBtn.setAttribute('aria-expanded', open ? 'true' : 'false');
					panel.setAttribute('aria-hidden', open ? 'false' : 'true');
				};

				setOpen(false);
				openBtn.addEventListener('click', () => setOpen(root.dataset.open !== '1'));
				if (closeBtn instanceof HTMLButtonElement) closeBtn.addEventListener('click', () => setOpen(false));
				window.addEventListener('keydown', (e) => {
					if (e.key === 'Escape') setOpen(false);
				});
				root.querySelectorAll('a').forEach((a) => a.addEventListener('click', () => setOpen(false)));
			})();
		</script>
	</section>
) : (
	<aside class="toc panel" aria-label="目录">
		<div class="toc-head">
			<div class="toc-title">目录</div>
		</div>
		<nav class="toc-body">
			{visible.length ? (
				<ul>
					{visible.map((h) => (
						<li class={`d${h.depth}`}>
							<a href={`#${h.slug}`}>{h.text}</a>
						</li>
					))}
				</ul>
			) : (
				<div class="muted empty">无标题</div>
			)}
		</nav>
	</aside>
)}

<style>
	.toc {
		padding: 14px;
		position: sticky;
		top: 78px;
		max-height: calc(100vh - 110px);
		overflow: hidden;
		display: flex;
		flex-direction: column;
		gap: 10px;
	}

	.toc-drawer {
		padding: 12px 14px;
		position: sticky;
		top: var(--site-header-height, 72px);
		z-index: 90;
		background: color-mix(in oklab, var(--panel-strong), transparent 20%);
		backdrop-filter: blur(16px);
	}

	.toc-drawer-head {
		width: 100%;
		cursor: pointer;
		border: 0;
		background: transparent;
		color: inherit;
		padding: 0;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 10px;
	}

	.chev {
		opacity: 0.7;
		transition: transform 220ms ease;
	}

	.toc-body-wrap {
		overflow: hidden;
		max-height: 0;
		transition: max-height 260ms ease;
	}

	.toc-drawer[data-open='1'] .toc-body-wrap {
		margin-top: 10px;
	}

	.toc-drawer[data-open='1'] .chev {
		transform: rotate(180deg);
	}

	.toc-head {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.toc-title {
		font-weight: 650;
	}

	.toc-body {
		overflow: auto;
		padding-right: 4px;
		max-height: 100%;
		height: 100%;
		min-height: 0;
		scrollbar-width: none;
		-ms-overflow-style: none;
	}

	.toc-body::-webkit-scrollbar {
		display: none;
	}

	.toc-float {
		display: none;
	}

	.toc-float-panel {
		display: none;
	}

	@media (max-width: 980px) {
		.toc-float {
			display: block;
		}

		.toc-float-btn {
			position: fixed;
			right: 12px;
			bottom: 84px;
			z-index: 95;
			height: 38px;
			padding: 0 14px;
			border-radius: 999px;
			border: 1px solid var(--border);
			background: color-mix(in oklab, var(--panel-strong), transparent 20%);
			backdrop-filter: blur(16px);
			color: var(--text);
			cursor: pointer;
		}

		.toc-float-btn:hover {
			border-color: color-mix(in oklab, var(--accent), var(--border) 35%);
		}

		.toc-float-panel {
			position: fixed;
			right: 12px;
			left: 12px;
			top: calc(var(--site-header-height, 72px) + 10px);
			bottom: 84px;
			z-index: 96;
			padding: 12px 14px;
			display: grid;
			grid-template-rows: auto 1fr;
			gap: 10px;
			background: color-mix(in oklab, var(--panel-strong), transparent 20%);
			backdrop-filter: blur(16px);
			overflow: hidden;
			opacity: 0;
			transform: translateY(10px);
			pointer-events: none;
			transition:
				opacity 180ms ease,
				transform 220ms ease;
		}

		.toc-float[data-open='1'] .toc-float-panel {
			opacity: 1;
			transform: translateY(0);
			pointer-events: auto;
		}

		.toc-float[data-open='1'] .toc-float-btn {
			opacity: 0;
			pointer-events: none;
		}

		.toc-float-head {
			display: flex;
			align-items: center;
			justify-content: space-between;
			gap: 10px;
		}

		.toc-float-panel .toc-body {
			min-height: 0;
			overflow: auto;
			scrollbar-width: none;
			-ms-overflow-style: none;
		}

		.toc-float-panel .toc-body::-webkit-scrollbar {
			display: none;
		}
	}

	ul {
		margin: 0;
		padding-left: 16px;
		display: grid;
		gap: 8px;
	}

	li {
		list-style: none;
	}

	a {
		color: var(--muted);
		text-decoration: none;
	}

	a:hover {
		color: var(--text);
		text-decoration: underline;
		text-decoration-color: color-mix(in oklab, var(--accent), transparent 55%);
	}

	.d3 {
		padding-left: 10px;
	}

	.d4 {
		padding-left: 20px;
	}

	.empty {
		font-size: 13px;
		padding: 8px 2px;
	}
</style>
