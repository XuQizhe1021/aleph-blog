---
type Heading = { depth: number; slug: string; text: string };
type Props = { headings: Heading[]; variant?: 'sidebar' | 'drawer' };

const { headings, variant = 'sidebar' } = Astro.props;
const visible = headings.filter((h) => h.depth >= 2 && h.depth <= 4);
---

{variant === 'drawer' ? (
	<details class="toc-drawer panel" aria-label="目录">
		<summary class="toc-drawer-head">
			<span class="toc-title">目录</span>
		</summary>
		<nav class="toc-body">
			{visible.length ? (
				<ul>
					{visible.map((h) => (
						<li class={`d${h.depth}`}>
							<a href={`#${h.slug}`}>{h.text}</a>
						</li>
					))}
				</ul>
			) : (
				<div class="muted empty">无标题</div>
			)}
		</nav>
	</details>
) : (
	<aside class="toc panel" aria-label="目录">
		<div class="toc-head">
			<div class="toc-title">目录</div>
		</div>
		<nav class="toc-body">
			{visible.length ? (
				<ul>
					{visible.map((h) => (
						<li class={`d${h.depth}`}>
							<a href={`#${h.slug}`}>{h.text}</a>
						</li>
					))}
				</ul>
			) : (
				<div class="muted empty">无标题</div>
			)}
		</nav>
	</aside>
)}

<style>
	.toc {
		padding: 14px;
		position: sticky;
		top: 78px;
		max-height: calc(100vh - 110px);
		overflow: hidden;
		display: flex;
		flex-direction: column;
		gap: 10px;
	}

	.toc-drawer {
		padding: 12px 14px;
		position: sticky;
		top: 72px;
		z-index: 70;
	}

	.toc-drawer-head {
		cursor: pointer;
		list-style: none;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 10px;
	}

	.toc-drawer-head::-webkit-details-marker {
		display: none;
	}

	.toc-drawer[open] .toc-body {
		margin-top: 10px;
		max-height: min(50vh, 420px);
	}

	.toc-head {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.toc-title {
		font-weight: 650;
	}

	.toc-body {
		overflow: auto;
		padding-right: 4px;
		min-height: 0;
		scrollbar-width: none;
		-ms-overflow-style: none;
	}

	.toc-body::-webkit-scrollbar {
		display: none;
	}

	ul {
		margin: 0;
		padding-left: 16px;
		display: grid;
		gap: 8px;
	}

	li {
		list-style: none;
	}

	a {
		color: var(--muted);
		text-decoration: none;
	}

	a:hover {
		color: var(--text);
		text-decoration: underline;
		text-decoration-color: color-mix(in oklab, var(--accent), transparent 55%);
	}

	.d3 {
		padding-left: 10px;
	}

	.d4 {
		padding-left: 20px;
	}

	.empty {
		font-size: 13px;
		padding: 8px 2px;
	}
</style>
