---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCategories, getPublicPosts } from '../../utils/blog';

export async function getStaticPaths() {
	const posts = await getPublicPosts();
	const categories = new Map<string, string>();
	for (const post of posts) {
		for (const c of getCategories(post)) {
			categories.set(c, c);
		}
	}
	return [...categories.values()].map((category) => ({
		params: { category },
	}));
}

const { category } = Astro.params;
const posts = (await getPublicPosts()).filter((p) => getCategories(p).includes(category));
---

<Layout title={`分类：${category}`}>
	<section class="head panel">
		<div class="head-left">
			<div class="title">{category}</div>
			<div class="muted">共 {posts.length} 篇</div>
		</div>
		<div class="pager" id="pager" hidden>
			<button class="btn" id="prev" type="button">上一页</button>
			<div class="muted" id="page-info"></div>
			<button class="btn" id="next" type="button">下一页</button>
		</div>
	</section>
	<section class="list" id="paged-list">
		{posts.length ? posts.map((post) => <PostCard post={post} />) : <div class="muted">暂无文章</div>}
	</section>

	<script is:inline>
		(() => {
			const list = document.getElementById('paged-list');
			const pager = document.getElementById('pager');
			const prev = document.getElementById('prev');
			const next = document.getElementById('next');
			const info = document.getElementById('page-info');
			if (!list || !pager || !prev || !next || !info) return;

			const items = Array.from(list.children).filter((el) => el instanceof HTMLElement);
			if (items.length <= 1) return;

			let pageSize = 10;
			let page = 0;
			let pageCount = 1;

			const computePageSize = () => (matchMedia('(max-width: 720px)').matches ? 6 : 10);

			const apply = () => {
				pageSize = computePageSize();
				pageCount = Math.max(1, Math.ceil(items.length / pageSize));
				page = Math.min(page, pageCount - 1);
				const start = page * pageSize;
				const end = start + pageSize;
				items.forEach((el, i) => (el.style.display = i >= start && i < end ? '' : 'none'));
				info.textContent = `${page + 1} / ${pageCount}`;
				prev.disabled = page <= 0;
				next.disabled = page >= pageCount - 1;
				pager.hidden = pageCount <= 1;
			};

			prev.addEventListener('click', () => {
				page = Math.max(0, page - 1);
				apply();
			});
			next.addEventListener('click', () => {
				page = Math.min(pageCount - 1, page + 1);
				apply();
			});

			let t = 0;
			window.addEventListener('resize', () => {
				window.clearTimeout(t);
				t = window.setTimeout(() => apply(), 120);
			});

			apply();
		})();
	</script>
</Layout>

<style>
	.head {
		padding: 18px;
		display: grid;
		grid-template-columns: 1fr auto;
		gap: 12px;
		align-items: center;
		position: sticky;
		top: 72px;
		z-index: 80;
	}

	.title {
		font-size: 24px;
		font-weight: 850;
	}

	.head-left {
		display: grid;
		gap: 6px;
	}

	.list {
		margin-top: 14px;
		display: grid;
		gap: 12px;
	}

	.pager {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 12px;
	}

	@media (max-width: 720px) {
		.head {
			grid-template-columns: 1fr;
			align-items: start;
		}
		.pager {
			width: 100%;
		}
	}
</style>
