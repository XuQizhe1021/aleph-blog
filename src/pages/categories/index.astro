---
import Layout from '../../layouts/Layout.astro';
import { getPublicPosts, getAllCategories } from '../../utils/blog';
import { withBase } from '../../utils/paths';

const posts = await getPublicPosts();
const categories = getAllCategories(posts);
---

<Layout title="分类">
	<section class="head panel">
		<div class="title">分类</div>
		<div class="muted">共 {categories.length} 个</div>
	</section>

	<section class="grid">
		{categories.length ? (
			categories.map((c) => (
				<a class="cat panel" href={withBase(`/categories/${encodeURIComponent(c.category)}`)}>
					<div class="name">{c.category}</div>
					<div class="muted">{c.count} 篇</div>
				</a>
			))
		) : (
			<div class="muted">暂无分类</div>
		)}
	</section>
</Layout>

<style>
	.head {
		padding: 18px;
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 10px;
	}

	.title {
		font-size: 24px;
		font-weight: 800;
	}

	.grid {
		margin-top: 14px;
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 12px;
	}

	.cat {
		padding: 16px;
		display: grid;
		gap: 6px;
		text-decoration: none;
	}

	.cat:hover {
		text-decoration: none;
		border-color: color-mix(in oklab, var(--accent), var(--border) 30%);
	}

	.name {
		font-weight: 750;
	}

	@media (max-width: 980px) {
		.grid {
			grid-template-columns: 1fr;
		}
	}
</style>

