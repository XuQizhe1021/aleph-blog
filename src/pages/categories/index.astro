---
import Layout from '../../layouts/Layout.astro';
import { getPublicPosts, getAllCategories } from '../../utils/blog';
import { withBase } from '../../utils/paths';

const posts = await getPublicPosts();
const categories = getAllCategories(posts);
---

<Layout title="分类">
	<section class="head panel">
		<div class="head-left">
			<div class="title">分类</div>
			<div class="muted">共 {categories.length} 个</div>
		</div>
		<div class="pager" id="pager" hidden>
			<button class="btn" id="prev" type="button">上一页</button>
			<div class="muted" id="page-info"></div>
			<button class="btn" id="next" type="button">下一页</button>
		</div>
	</section>

	<section class="grid" id="paged-grid">
		{categories.length ? (
			categories.map((c) => (
				<a class="cat panel" href={withBase(`/categories/${encodeURIComponent(c.category)}`)}>
					<div class="name">{c.category}</div>
					<div class="muted">{c.count} 篇</div>
				</a>
			))
		) : (
			<div class="muted">暂无分类</div>
		)}
	</section>

	<script is:inline>
		(() => {
			const grid = document.getElementById('paged-grid');
			const pager = document.getElementById('pager');
			const prev = document.getElementById('prev');
			const next = document.getElementById('next');
			const info = document.getElementById('page-info');
			if (!grid || !pager || !prev || !next || !info) return;

			const items = Array.from(grid.children).filter((el) => el instanceof HTMLElement);
			if (items.length <= 1) return;

			let pageSize = 15;
			let page = 0;
			let pageCount = 1;

			const computePageSize = () => (matchMedia('(max-width: 980px)').matches ? 8 : 15);

			const apply = () => {
				pageSize = computePageSize();
				pageCount = Math.max(1, Math.ceil(items.length / pageSize));
				page = Math.min(page, pageCount - 1);
				const start = page * pageSize;
				const end = start + pageSize;
				items.forEach((el, i) => (el.style.display = i >= start && i < end ? '' : 'none'));
				info.textContent = `${page + 1} / ${pageCount}`;
				prev.disabled = page <= 0;
				next.disabled = page >= pageCount - 1;
				pager.hidden = pageCount <= 1;
			};

			prev.addEventListener('click', () => {
				page = Math.max(0, page - 1);
				apply();
			});
			next.addEventListener('click', () => {
				page = Math.min(pageCount - 1, page + 1);
				apply();
			});

			let t = 0;
			window.addEventListener('resize', () => {
				window.clearTimeout(t);
				t = window.setTimeout(() => apply(), 120);
			});

			apply();
		})();
	</script>
</Layout>

<style>
	.head {
		padding: 18px;
		display: grid;
		grid-template-columns: 1fr auto;
		gap: 12px;
		align-items: center;
		position: sticky;
		top: 72px;
		z-index: 80;
	}

	.title {
		font-size: 24px;
		font-weight: 800;
	}

	.head-left {
		display: grid;
		gap: 6px;
	}

	.grid {
		margin-top: 14px;
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 12px;
	}

	.cat {
		padding: 16px;
		display: grid;
		gap: 6px;
		text-decoration: none;
	}

	.cat:hover {
		text-decoration: none;
		border-color: color-mix(in oklab, var(--accent), var(--border) 30%);
	}

	.name {
		font-weight: 750;
	}

	@media (max-width: 980px) {
		.grid {
			grid-template-columns: 1fr;
		}
	}

	.pager {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 12px;
	}

	@media (max-width: 720px) {
		.head {
			grid-template-columns: 1fr;
			align-items: start;
		}
		.pager {
			width: 100%;
		}
	}
</style>

